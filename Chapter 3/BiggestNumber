/**Class: BiggestNumber 
 *author: Hassan Hassan
 *version: 1.0
 *course: 2140 ITEC Fall 2022
 *written: September 8, 2022
 *
 *This class will take three integers from the user and print the largest number.
 */

import java.util.Arrays;
import java.util.Scanner;

public class BiggestNumber {

    public static void main(String[] args) {

        //scanner object added 
        Scanner input = new Scanner(System.in);
        
        //asks user to type a number 
        System.out.println("Type the first number: ");
        
        //gets the input 
        int number1 = input.nextInt();


        //asks user to type a number  
        System.out.println("Type the second number: ");
        
        //gets an input 
        int number2 = input.nextInt();

        //asks user to type a number 
        System.out.println("Type the third number: ");
        
        //gets an input
        int number3 = input.nextInt();

        //creates an array that stores the users input 
        int[] numList = {number1, number2, number3};
        
        //sorts the array from lowest to greatest 
        Arrays.sort(numList);
        
        //prints the greatest number that the user gave 
        System.out.println(numList[2]);




    }

}
