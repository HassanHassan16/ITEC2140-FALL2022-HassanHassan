 *
 *This class will calculate the base area and volume of a cylinder
 */

import java.util.Scanner;


public class Cylinder
{

    public static void main (String [] args)
    {

        //Variable holds the pi-value
        double PI_VALUE = 3.1416;

        //creates new scanner object
        Scanner input = new Scanner(System.in);

        //asks user to enter the radius of the cylinder
        System.out.println("Enter the radius: ");

        //gets the radius from user
        double radius = input.nextDouble();

        //asks the user for the length of the cylinder
        System.out.println("Enter length of cylinder: ");

        //gets length from user
        double length = input.nextDouble();

        //calculates the base of the cylinder
        double base = PI_VALUE * (radius * radius);

        //calculates the volume of the cylinder
        double volume = base * length;

        //prints the base of the cylinder
        System.out.println("The base of the cylinder is: " + base);

        //prints the volume of the cylinder
        System.out.println("The volume of the cylinder is: " + volume);


    }


}
